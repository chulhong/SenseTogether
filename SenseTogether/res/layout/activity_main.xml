<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0079B0"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_standalone_sensing"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/standalone_sensing"
        android:background="#00000000"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="performStandaloneSensing" />

    <Button
        android:id="@+id/btn_create_room"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/create_room"
        android:background="#00000000"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:typeface="sans"        
        android:onClick="createRoom" />

    <Button
        android:id="@+id/btn_join_room"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/join_room"
		android:textColor="@android:color/white"
        android:background="#00000000"
		android:textStyle="bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:onClick="joinRoom" />

</LinearLayout>
